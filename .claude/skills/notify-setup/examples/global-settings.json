{
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "<NOTIFY_TOOLS_DIR>/scripts/notify.sh \"$(basename \"$CLAUDE_PROJECT_DIR\")\" \"Task completed\" \"info\" \"{\\\"project\\\":\\\"$CLAUDE_PROJECT_DIR\\\"}\""
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "MSG=$(cat - | jq -r '.message // empty') && [ -n \"$MSG\" ] && <NOTIFY_TOOLS_DIR>/scripts/notify.sh \"$(basename \"$CLAUDE_PROJECT_DIR\")\" \"$MSG\" \"info\" \"{\\\"project\\\":\\\"$CLAUDE_PROJECT_DIR\\\"}\""
          }
        ]
      }
    ]
  }
}
