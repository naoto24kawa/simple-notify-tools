{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "enableAllProjectMcpServers": true,
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "INPUT=$(cat -) && LAST_MSG=$(echo \"$INPUT\" | jq -r '.last_assistant_message // \"Task completed\"' | head -c 200) && /Users/nishikawa/projects/naoto24kawa/simple-notify-tools/.claude/skills/notify-setup/scripts/notify.sh \"$(basename \"$CLAUDE_PROJECT_DIR\")\" \"$LAST_MSG\""
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bun run format || true"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/home/naoto24kawa/projects/naoto24kawa/simple-notify-tools/scripts/notify.sh \"$(basename \"$CLAUDE_PROJECT_DIR\")\" \"Task completed\" \"info\" \"{\\\"project\\\":\\\"$CLAUDE_PROJECT_DIR\\\"}\""
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "review@naoto24kawa-claude-plugins": true,
    "claude@naoto24kawa-claude-plugins": true,
    "frontend-design@claude-plugins-official": true,
    "superpowers@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": true,
    "pr-review-toolkit@claude-plugins-official": true,
    "claude-md-management@claude-plugins-official": true,
    "code-review@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true,
    "ralph-loop@claude-plugins-official": true,
    "remote-chrome@naoto24kawa-claude-plugins": true
  },
  "extraKnownMarketplaces": {
    "naoto24kawa": {
      "source": {
        "source": "github",
        "repo": "naoto24kawa/claude-plugins"
      }
    }
  }
}
